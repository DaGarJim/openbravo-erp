      <column name="CURRENTBALANCE" primaryKey="false" required="true" type="DECIMAL" default="0" autoIncrement="false"/>
      <column name="CREDITLIMIT" primaryKey="false" required="true" type="DECIMAL" default="0" autoIncrement="false"/>
