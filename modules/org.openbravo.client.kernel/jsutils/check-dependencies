#!/bin/bash

if ! [[ -x "$(command -v npm)" ]]; then
    echo -e "\n\033[0;33mERROR:\033[0m npm command not found. Install using"
    echo -e "  sudo apt install npm\n";
    exit 1
fi

function installNodePackagesIfNeeded {
    if [[ ! -d ./modules/org.openbravo.client.kernel/node_modules || \
            -z "$(find ./modules/org.openbravo.client.kernel/node_modules -name eslint)" || \
            -z "$(find ./modules/org.openbravo.client.kernel/node_modules -name prettier)" ]]; then
        echo -e "eslint and/or prettier command not found. Running npm install\n"
        originalDir="$(pwd)"
        cd modules/org.openbravo.client.kernel
        npm install
        cd "$originalDir"
    fi
}

function installNodePackagesIfNeededFromModules {
    if [[ ! -d ../org.openbravo.client.kernel/node_modules || \
            -z "$(find ../org.openbravo.client.kernel/node_modules -name eslint)" || \
            -z "$(find ../org.openbravo.client.kernel/node_modules -name prettier)" ]]; then
        echo -e "eslint and/or prettier command not found. Running npm install\n"
        originalDir="$(pwd)"
        cd ../org.openbravo.client.kernel
        npm install
        cd "$originalDir"
    fi
}

if [[ -d ../../modules ]] ; then
    installNodePackagesIfNeededFromModules
else
    installNodePackagesIfNeeded
fi
