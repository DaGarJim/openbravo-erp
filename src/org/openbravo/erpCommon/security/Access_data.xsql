<SqlClass name="AccessData" package="org.openbravo.erpCommon.security">
   <SqlMethod name="selectAccessLevel" type="preparedStatement" return="string">
      <SqlMethodComment></SqlMethodComment>
      <Sql><![CDATA[
        SELECT ACCESSLEVEL
          FROM AD_FORM
         WHERE TO_CHAR('X') = TO_CHAR(?) 
           AND AD_FORM_ID = TO_NUMBER(?)
         UNION 
         SELECT ACCESSLEVEL
          FROM AD_PROCESS 
         WHERE (TO_CHAR('P') = TO_CHAR(?) OR TO_CHAR('R') = TO_CHAR(?))
           AND AD_PROCESS_ID = TO_NUMBER(?)
         UNION
         SELECT T.ACCESSLEVEL
          FROM AD_TABLE T, 
               AD_TAB TB
         WHERE T.AD_TABLE_ID = TB.AD_TABLE_ID
           AND TO_CHAR('W') = TO_CHAR(?)
           AND TB.AD_TAB_ID = TO_NUMBER(?)
         UNION
         SELECT ACCESSLEVEL
          FROM AD_TASK
         WHERE TO_CHAR('T') = TO_CHAR(?) 
           AND AD_TASK_ID = TO_NUMBER(?)
         UNION
        SELECT ACCESSLEVEL
          FROM AD_WORKFLOW
         WHERE TO_CHAR('F') = TO_CHAR(?) 
           AND AD_WORKFLOW_ID = TO_NUMBER(?)
      ]]></Sql>
      <Parameter name="type"/>
      <Parameter name="id"/>
      
