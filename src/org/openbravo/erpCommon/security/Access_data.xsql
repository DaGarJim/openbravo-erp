   <SqlMethod name="selectAccessSearch" type="preparedStatement" return="string">
     <Sql><![CDATA[
          select count(*)
            from ad_column c,
                 ad_field f,
                 ad_tab tb,
                 ad_table t,
                 ad_window_access wa,
                 ad_window w,
                 ad_role r
           where r.ad_role_id = TO_NUMBER(?)
             and ad_reference_value_id = TO_NUMBER(?)
             and ad_reference_id = 30
             and f.ad_column_id = c.ad_column_id
             and tb.ad_tab_id  = f.ad_tab_id
             and tb.ad_window_id = wa.ad_window_id
             and tb.ad_window_id = w.ad_window_id
             and wa.ad_role_id = r.ad_role_id
             and wa.isactive = 'Y'
             and w.isactive='Y'
             and t.isActive='Y'
             and tb.isActive='Y'
             and tb.ad_table_id = t.ad_table_id
             and ( (t.accessLevel=4 and instr(r.userLevel,'S')!=0)
                or (t.accessLevel=1 and instr(r.userLevel,'O')!=0)
                or (t.accessLevel=3 and not (instr(r.userLevel,'C')=0 or instr(r.userLevel,'O')=0))
                or (t.accessLevel=6 and not (instr(r.userLevel,'S')=0 or instr(r.userLevel,'C')=0))
                )
             and not exists (select 1
                              from ad_table_access ta
                             where t.ad_table_id = ta.ad_table_id
                               and ta.ad_role_id = r.ad_role_id
                               and ta.isActive='Y'
                               and ta.isExclude = 'N')
     ]]></Sql>
     <Parameter name="role"/>
     <Parameter name="id"/>
   </SqlMethod>
   
    <SqlMethod name="isReadOnly" type="preparedStatement" return="string">
      <SqlMethodComment></SqlMethodComment>
      <Sql>
        SELECT isReadOnly
          FROM AD_Tab
         WHERE AD_Tab_ID = ? 
      </Sql>
      <Parameter name="tabId"/>
    </SqlMethod>
