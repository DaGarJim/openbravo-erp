   </SqlMethod>
   
  <SqlMethod name="selectAccess" type="preparedStatement" return="string">
      <SqlMethodComment></SqlMethodComment>
      <Sql><![CDATA[
       SELECT SUM(TOTAL) AS TOTAL
         FROM (SELECT COUNT(*) AS TOTAL 
                FROM AD_Process_Access 
               WHERE AD_Role_ID = TO_NUMBER(?) 
                 AND (TO_CHAR('P') = TO_CHAR(?) OR TO_CHAR('R') = TO_CHAR(?))
                 AND AD_Process_ID = TO_NUMBER(?) 
                 AND IsActive = 'Y'
               UNION
              SELECT COUNT(*) AS TOTAL 
                FROM AD_Form_Access 
               WHERE AD_Role_ID = TO_NUMBER(?)
                 AND TO_CHAR('X') = TO_CHAR(?) 
                 AND AD_Form_ID = TO_NUMBER(?) 
                 AND IsActive = 'Y'
               UNION
               SELECT COUNT(*) AS TOTAL 
                 FROM AD_Window_Access 
                WHERE AD_Role_ID = TO_NUMBER(?) 
                  AND TO_CHAR('W') = TO_CHAR(?)
                  AND AD_Window_ID = (SELECT AD_WINDOW_ID
                                        FROM AD_TAB
                                       WHERE AD_TAB_ID = TO_NUMBER(?)) 
                  AND IsActive = 'Y'
                UNION
               SELECT COUNT(*) AS TOTAL 
                 FROM AD_Table_Access t, AD_Tab tb
                WHERE t.AD_Table_ID = tb.AD_Table_ID 
                 AND t.AD_Role_ID = TO_NUMBER(?) 
                 AND TO_CHAR('TABLE') = TO_CHAR(?) 
                 AND tb.AD_Tab_ID = TO_NUMBER(?) 
                 AND t.IsActive = 'Y' 
                 AND t.IsExclude = 'Y'
               UNION
              SELECT COUNT(*) AS TOTAL 
                FROM AD_Task_Access 
               WHERE AD_Role_ID = TO_NUMBER(?) 
                 AND TO_CHAR('T') = TO_CHAR(?)
                 AND AD_Task_ID = TO_NUMBER(?) 
                 AND IsActive = 'Y' 
               UNION
              SELECT COUNT(*) AS TOTAL 
                FROM AD_Workflow_Access 
               WHERE AD_Role_ID = TO_NUMBER(?)
                 AND TO_CHAR('F') = TO_CHAR(?) 
                 AND AD_Workflow_ID = TO_NUMBER(?) 
                 AND IsActive = 'Y' ) TOTAL
       
      ]]></Sql>
      <Parameter name="role"/>
