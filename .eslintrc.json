{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "prettier", "plugin:jest/recommended", "plugin:jest/style"],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "globals": {
    "OB": "writable",
    "Backbone": "readonly",
    "_": "readonly",
    "isc": "readonly",
    "BigDecimal": "readonly"
  },
  "rules": {
    "eqeqeq": ["warn", "smart"],
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ],
    "no-console": ["warn"],
    "no-useless-escape": ["warn"]
  }
}
