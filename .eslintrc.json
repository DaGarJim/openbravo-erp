{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "globals": {
    "OB": "writeable",
    "Backbone": "readable",
    "_": "readable",
    "isc": "readable",
    "BigDecimal": "readable"
  },
  "rules": {
    "eqeqeq": ["warn", "smart"],
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ],
    "no-console": ["warn"],
    "no-useless-escape": ["warn"]
  }
}
