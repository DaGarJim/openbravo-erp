# =============================================================================
# OPENBRAVO ERP - ORACLE DEMO ENVIRONMENT CONFIGURATION
# =============================================================================
# Variables de entorno para el entorno de demo con Oracle Database
# Este archivo define las credenciales y configuraciones para la demo live

# =============================================================================
# ORACLE DATABASE CONFIGURATION
# =============================================================================

# Oracle System Password (for SYS, SYSTEM users)
ORACLE_PWD=OpenbravoDemo123

# Oracle Application User (will be created automatically)
ORACLE_APP_USER=openbravo
ORACLE_APP_PASSWORD=openbravo

# Oracle Connection Details
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=XE
ORACLE_PDB=XEPDB1

# Oracle Schema Configuration
ORACLE_SCHEMA=OPENBRAVO
ORACLE_TABLESPACE_DATA=OPENBRAVO_DATA
ORACLE_TABLESPACE_INDEX=OPENBRAVO_INDEX

# =============================================================================
# DEMO CONFIGURATION
# =============================================================================

# Demo Data Settings
DEMO_LOAD_SAMPLE_DATA=true
DEMO_CREATE_TEST_USERS=true
DEMO_ENABLE_DEBUG=true

# MCP Server Configuration
MCP_ORACLE_CONNECTION_STRING=openbravo/openbravo@localhost:1521/XE
MCP_TARGET_SCHEMA=OPENBRAVO
MCP_CACHE_DIR=.cache

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Compose Project Name
COMPOSE_PROJECT_NAME=openbravo-demo

# Data Persistence Path
DATA_PATH=./docker/data

# Log Level
LOG_LEVEL=INFO

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network Subnet
NETWORK_SUBNET=172.20.0.0/16

# Service Ports
ORACLE_DB_PORT=1521
ORACLE_EM_PORT=5500
ADMINER_PORT=8081
TOMCAT_PORT=8080

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Oracle Memory Settings (in MB)
ORACLE_SGA_SIZE=1024
ORACLE_PGA_SIZE=512
ORACLE_SHARED_MEMORY=1g

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./docker/backup

# Health Check Settings
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=15s
HEALTHCHECK_RETRIES=10
HEALTHCHECK_START_PERIOD=180s