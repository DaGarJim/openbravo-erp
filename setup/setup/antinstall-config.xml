<installer ui="swing,text" 
           verbose="false" 
           lookAndFeel="org.tp23.jgoodies.plaf.plastic.PlasticXPLookAndFeel" 
           name="openbravo" 
           windowIcon="/resources/logo_icon.png" 
           defaultImageResource="/resources/logo.png" 
           minJavaVersion="1.4">
  <page
			type="license"
			name="license"
			displayText="License agreement"
			resource="/resources/License.txt">
	</page>
  <page
			type="input"
			name="properties"
			displayText="Required configure options">
    <directory
                                property="copy_src"
                                defaultValue="/opt/AppsOpenbravo/backup"
                                defaultValueWin="C:/AppsOpenbravo/backup"
                                displayText="Backup folder"
                                create="true"/>
    <text property="base.app" displayText="Application name" defaultValue="AppsOpenbravo"/>
		<directory
				property="base.source"
				defaultValue="/opt/AppsOpenbravo"
				defaultValueWin="C:/AppsOpenbravo"
				displayText="Application folder"
				checkExists="true"/>
    <directory
				property="base.temp"
				defaultValue="/opt/tmp"
				defaultValueWin="C:/Tmp"
				displayText="Temporary folder"
				create="true"/>
    <directory
				property="attach.path"
				defaultValue="/opt/AppsOpenbravo/attachment"
				defaultValueWin="C:/AppsOpenbravo/attachment"
				displayText="Attachments folder"
				create="true"/>
    <directory
				property="font.base"
				defaultValue="/opt/AppsOpenbravo/fonts"
				defaultValueWin="C:/AppsOpenbravo/fonts"
				displayText="Special pdf fonts folder"
				create="true"/>
    <text property="jakarta.context.name" displayText="Tomcat context" defaultValue="openbravo"/>
    <text property="web.url" displayText="Web url" defaultValue="http://localhost:8880/openbravo/web"/>
	</page>
  <page
			type="input"
			name="propertiesBBDD"
			displayText="Required database configure options">
    <text property="systemUser" displayText="System User" defaultValue="SYSTEM"/>
    <password property="systemPassword" displayText="System password" defaultValue="" regex=".+" testMask="true"/>
    <text property="bbdd.host" displayText="Database server" defaultValue="localhost"/>
    <text property="bbdd.user" displayText="Database user" defaultValue="TAD"/>
    <password property="bbdd.password" displayText="Database user password" defaultValue="TAD" regex=".+" testMask="true"/>
    <text property="bbdd.sid" displayText="SID" defaultValue="orcl"/>
    <text property="bbdd.port" displayText="Port" defaultValue="1521"/>
    <text property="bbdd.tns" displayText="TNS" defaultValue="orcl"/>
    <select property="bbdd.rdbms" displayText="DB" defaultValue="ORACLE">
      <option value="ORACLE" text="Oracle"/>
      <option value="POSTGRE" text="PostgreSQL"/>
    </select>
	</page>
  <page
			type="progress"
			name="progress"
			displayText="Installation progress"
			showTargets="false"
			target="setup">
	</page>
</installer>
